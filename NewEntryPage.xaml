<Window x:Class="WPF_Visualizer_Temp.NewEntryPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Entry"
        Height="450"
        Width="400"
        ResizeMode="NoResize"
        Background="#f0f0f5"
        WindowStartupLocation="CenterOwner">

    <Border Margin="15" Padding="20" Background="White" BorderBrush="#bdc3c7" BorderThickness="1" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Form -->
                <RowDefinition Height="Auto"/>
                <!-- Submit Button -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                   Text="Add New Entry"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#2c3e50"
                   Margin="0,0,0,10"/>

            <!-- Scrollable Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="FormPanel"/>
            </ScrollViewer>

            <!-- Submit Button -->
            <Button Grid.Row="2"
                Content="Submit"
                HorizontalAlignment="Right"
                Margin="0,10,0,0"
                Padding="10,5"
                Width="100"
                Background="#27ae60"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                Click="Submit_Click"
                Cursor="Hand"/>
        </Grid>
    </Border>
</Window>