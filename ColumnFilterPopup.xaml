<UserControl x:Class="WPF_Visualizer_Temp.ColumnFilterPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="200" Height="342">
    <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="8" Margin="0,0,0,10">
        <StackPanel>
            <!-- Search Box -->
            <Grid Margin="0 0 0 8">
                <TextBox x:Name="SearchBox"
             TextChanged="SearchBox_TextChanged"
             VerticalContentAlignment="Center"/>
                <TextBlock x:Name="Watermark"
               Text="Search..."
               Foreground="Gray"
               Margin="4,0,0,0"
               VerticalAlignment="Center"
               IsHitTestVisible="False"
               Visibility="Visible"/>
            </Grid>

            <!-- Sort Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 8" HorizontalAlignment="Right">
                <Button Content="A-Z" Width="50" Click="SortAsc_Click" Margin="0 0 5 0"/>
                <Button Content="Z-A" Width="50" Click="SortDesc_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5" HorizontalAlignment="Right">
                <Button Content="Select All" Margin="2" Padding="4,2" Click="SelectAll_Click"/>
                <Button Content="Unselect All" Margin="2" Padding="4,2" Click="UnselectAll_Click"/>
            </StackPanel>
            <!-- Checkbox List -->
            <ListBox x:Name="CheckboxList" VirtualizingStackPanel.IsVirtualizing="True"
         ScrollViewer.CanContentScroll="True" Height="200"/>

            <!-- Apply/Reset -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 8 0 0">
                <Button Content="Apply" Click="Apply_Click" Width="60" Margin="0 0 5 0"/>
                <Button Content="Reset" Click="Reset_Click" Width="60"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>