<Window x:Class="WPF_Visualizer_Temp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Visualizer_Temp"
        mc:Ignorable="d"
        Title="Access Database Viewer"
        Height="600" Width="900"
        Background="#f0f0f5"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <CollectionViewSource x:Key="BookmarkView" />
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#2c3e50" CornerRadius="8" Padding="15" Margin="0,0,0,10">
            <TextBlock Text="Access Database Editor"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       FontFamily="Georgia"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- File Row -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="Open Access File"
                    Width="160"
                    Background="#34495e"
                    Foreground="White"
                    FontWeight="Bold"
                    Padding="8,4"
                    BorderThickness="0"
                    Click="OpenFile_Click"
                    Cursor="Hand"
                    Grid.Column="0"/>

            <TextBlock x:Name="FilePathText"
                       VerticalAlignment="Center"
                       Foreground="#2c3e50"
                       FontStyle="Italic"
                       Margin="10,0"
                       TextTrimming="CharacterEllipsis"
                       MaxWidth="400"
                       Grid.Column="1"/>

            <Button Content="New Entry"
                    Width="120"
                    Background="#27ae60"
                    Foreground="White"
                    FontWeight="Bold"
                    Padding="8,4"
                    Margin="10,0,0,0"
                    Click="NewEntry_Click"
                    Cursor="Hand"
                    Grid.Column="2"/>
        </Grid>

        <!-- Main Display -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar: Tables / Bookmarks -->
            <Border Grid.Column="0"
                    Background="White"
                    BorderBrush="#bdc3c7"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="5"
                    Margin="0,0,10,0">
                <StackPanel>
                    <DockPanel Margin="0,0,0,5">
                        <TextBlock x:Name="SidebarTitle"
                                   Text="Tables"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   Foreground="#2c3e50"
                                   DockPanel.Dock="Left"/>
                        <Button Content="Bookmarks"
                                ToolTip="Toggle Bookmarks"
                                Width="30"
                                Height="24"
                                Margin="5,0,0,0"
                                Click="ToggleSidebar_Click"
                                DockPanel.Dock="Right"/>
                    </DockPanel>

                    <Grid>
                        <!-- Tables View -->
                        <ScrollViewer x:Name="TablesScroll"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Visibility="Visible">
                            <ListBox x:Name="TablesListBox"
                                     SelectionChanged="TablesListBox_SelectionChanged"
                                     Background="#ecf0f1"
                                     BorderThickness="0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel Margin="2" LastChildFill="True">
                                            <Button Content="⭐"
                                                    Width="25"
                                                    Height="25"
                                                    Margin="0,0,6,0"
                                                    VerticalAlignment="Center"
                                                    DockPanel.Dock="Left"
                                                    Tag="{Binding}"
                                                    ToolTip="Bookmark Table"
                                                    Click="BookmarkTableFromList_Click"/>
                                            <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                        </DockPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>

                        <!-- Bookmarks View -->
                        <ScrollViewer x:Name="BookmarksScroll"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Visibility="Collapsed">
                            <ListBox x:Name="BookmarksListBox"
                             Background="#ecf0f1"
                             BorderThickness="0"
                             ItemsSource="{Binding Source={StaticResource BookmarkView}}"
                             SelectionChanged="BookmarksListBox_SelectionChanged">
                                <ListBox.GroupStyle>
                                    <GroupStyle>
                                        <GroupStyle.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}"
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   Foreground="#2c3e50"
                                                   Margin="0,5,0,2"/>
                                            </DataTemplate>
                                        </GroupStyle.HeaderTemplate>
                                    </GroupStyle>
                                </ListBox.GroupStyle>

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel Margin="2" LastChildFill="True">
                                            <Button Content="🗑️"
                        Width="25"
                        Height="25"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        Tag="{Binding}"
                        ToolTip="Remove Bookmark"
                        Click="DeleteBookmark_Click"/>
                                            <TextBlock Text="{Binding TableName}"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="#2c3e50"/>
                                        </DockPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Data Display -->
            <Border Grid.Column="1"
                    Background="White"
                    BorderBrush="#bdc3c7"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="5">
                <DataGrid x:Name="DataGridDisplay"
                  AutoGenerateColumns="True"
                  AutoGeneratingColumn="DataGridDisplay_AutoGeneratingColumn"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  ScrollViewer.CanContentScroll="True"
                  AlternatingRowBackground="#f9f9f9"
                  RowBackground="White"
                  BorderThickness="0"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  Margin="0">

                    <!-- ✅ 1. Add this style inside the DataGrid -->
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Header text -->
                                            <ContentPresenter 
                                            VerticalAlignment="Center"
                                            Margin="4,0,4,0"
                                            RecognizesAccessKey="True"
                                            Content="{TemplateBinding Content}" 
                                            Grid.Column="0" />

                                            <!-- Filter Button -->
                                            <Button Content="▼"
                                Width="16" Height="16"
                                Margin="4,0,4,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Grid.Column="1"
                                Click="HeaderFilter_Click"
                                Tag="{TemplateBinding Content}" />
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Resources>

                    <!-- ✅ 2. Your manual Actions column -->
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Actions" Width="100" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="📝" 
                                Width="28" Height="28" Margin="2"
                                Click="EditRow_Click"
                                Tag="{Binding}"/>
                                        <Button Content="🗑️" 
                                Width="28" Height="28" Margin="2"
                                Click="DeleteRow_Click"
                                Tag="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>
